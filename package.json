{
  "name": "create-miden",
  "version": "1.0.0",
  "description": "A CLI tool to quickly spin up Miden projects with Next.js",
  "main": "dist/index.js",
  "bin": {
    "create-miden": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "version:patch": "node scripts/version-bump.js patch",
    "version:minor": "node scripts/version-bump.js minor",
    "version:major": "node scripts/version-bump.js major",
    "version:stable": "npm run version:patch",
    "version:next": "npm run version:minor"
  },
  "keywords": [
    "miden",
    "nextjs",
    "cli",
    "template",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "fs-extra": "^11.1.1",
    "validate-npm-package-name": "^5.0.0",
    "semver": "^7.5.4",
    "boxen": "^5.1.2",
    "gradient-string": "^2.0.2",
    "figlet": "^1.6.0",
    "chalk-animation": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/validate-npm-package-name": "^4.0.2",
    "@types/semver": "^7.5.6",
    "@types/figlet": "^1.5.8",
    "typescript": "^5.3.0",
    "eslint": "^9.38.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "prettier": "^3.1.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qash-finance/create-miden.git"
  },
  "bugs": {
    "url": "https://github.com/qash-finance/create-miden/issues"
  },
  "homepage": "https://github.com/qash-finance/create-miden#readme"
}
